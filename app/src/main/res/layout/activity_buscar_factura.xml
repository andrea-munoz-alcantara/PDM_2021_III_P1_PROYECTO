<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoc"
    tools:context=".BuscarFacturaActivity">

    <EditText
        android:id="@+id/txtFacturaBuscar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="INGRESE IDENTIDAD DEL CLIENTE"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnBuscarFactura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscarFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:text="BUSCAR FACTURA"
        app:layout_constraintBottom_toTopOf="@+id/txvMensajeFactura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFacturaBuscar" />

    <TextView
        android:id="@+id/txvFacturaBuscada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txvMensajeFactura"
        app:layout_constraintTop_toBottomOf="@+id/txvMensajeFactura" />

    <TextView
        android:id="@+id/txvMensajeFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/txvFacturaBuscada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarFactura" />
</androidx.constraintlayout.widget.ConstraintLayout>